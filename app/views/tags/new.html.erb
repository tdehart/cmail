<% title "Create New Tag" %>

<div class="form_content">
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render :partial => "tags/new/buttons" %> <br />
  <div class="new_tag_form" id="tagstyle">
    <div id="create-tag-header">New Community Tag</div>
    <p class="header-description">This tag, once created, can be used to send confidential emails to other members in
      this community. Emails annotated with this tag can't be sent or forwarded to members outside of the community.</p>

    <%= form_for(@tag) do |f| %>


      <label>Name</label>
      <%= f.text_field :name %>

      <label>Members</label>
      <%= text_field_tag :members %>

      <label>Tags</label>
      <%= text_field_tag :other_tags %>

      <label>Description</label>
      <%= f.text_area :description %>

      <%= f.submit 'Send Invites', :class => 'buttons' %>

      <br />
    <% end %>
  </div>

  <div id="bottom_buttons">
    <%= render :partial => "tags/new/buttons" %>
  </div>
</div>
